extends ../layout/index

block contenido
    // Contenedor Principal Centrado
    div(class="min-h-screen bg-white flex items-center justify-center px-4 sm:px-6 lg:px-8")
        div(class="max-w-md w-full mx-auto text-center")
            
            // Icono de éxito o información
            div(class="mb-6")
                if tituloPagina === 'Cuenta Creada' || tituloPagina === 'Pedido Confirmado'
                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-20 h-20 mx-auto text-green-600")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                else
                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-20 h-20 mx-auto text-orange-600")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z")
            
            h1(class="text-3xl font-bold text-gray-900 mb-4")= tituloPagina
            
            div(class="mb-8 p-4 bg-gray-50 border border-gray-200 rounded-lg")
                p(class="text-gray-700")= mensaje
            
            // Botones de acción
            div(class="space-y-3")
                if enlace && textoEnlace
                    a(
                        href=enlace
                        class="inline-block w-full px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white font-semibold rounded-lg transition duration-200"
                    )= textoEnlace
                else
                    a(
                        href="/"
                        class="inline-block w-full px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white font-semibold rounded-lg transition duration-200"
                    ) Volver al inicio
                
                // Enlace secundario al login
                div(class="text-center text-sm mt-4")
                    p(class="text-gray-600")
                        a(class="text-orange-600 hover:text-orange-700 font-medium" href="/auth/login") Ir a inicio de sesión