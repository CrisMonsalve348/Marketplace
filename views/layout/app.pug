doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pagina || 'Marketplace'} | OpenTrade
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="/css/style.css")
        block styles
    body(class="min-h-screen bg-gray-50" style="font-family: 'Albert Sans', sans-serif;")
        include includes/header-app
        
        main(class="mx-auto container mt-10 px-2")
            if errores
                div.errores
                    each error in errores
                        p= error.msg

            block content

        script(src="/js/dropdown.js")
        block scripts
