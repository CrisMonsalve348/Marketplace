extends ../layout/index

block contenido
    // Contenedor Principal Centrado
    div(class="min-h-screen bg-white flex items-center justify-center px-4 sm:px-6 lg:px-8")
            div(class="max-w-md w-full mx-auto")
                
                h1(class="text-3xl font-bold text-orange-600 mb-2") Recuperar Contraseña
                p(class="text-gray-600 mb-8") Ingresa tu correo electrónico y te enviaremos un enlace

                if errores
                    div(class="mb-6 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg")
                        each error in errores
                            p(class="text-sm font-medium")= error.msg

                if mensaje
                    div(class="mb-6 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg")
                        p(class="text-sm font-medium")= mensaje

                form(method="POST" action="/auth/olvide-password" noValidate class="space-y-6")
                    input(type="hidden" name="_csrf" value=csrfToken)

                    // Email
                    div
                        label(class="block text-sm font-medium text-gray-700 mb-2" for="email") Correo electrónico
                        input#email(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition" 
                            type="email" 
                            name="email" 
                            placeholder="enriquee@correo.com" 
                            required
                        )

                    // Botón
                    button(
                        type="submit" 
                        class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 rounded-lg transition duration-200"
                    ) Enviar enlace de recuperación

                // Divider
                div(class="relative my-6")
                    div(class="absolute inset-0 flex items-center")
                        div(class="w-full border-t border-gray-300")
                    div(class="relative flex justify-center text-sm")
                        span(class="px-2 bg-white text-gray-500") O

                // Enlaces auxiliares
                div(class="text-center text-sm")
                    p(class="text-gray-600")
                        | ¿Recordaste tu contraseña? 
                        a(class="text-orange-600 hover:text-orange-700 font-medium" href="/auth/login") Inicia sesión