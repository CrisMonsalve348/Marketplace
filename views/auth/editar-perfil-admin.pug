extends ../layout/admin.pug

block content
    div(class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 mt-6")
        // Título y acción
        div(class="flex items-center justify-between mb-6")
            h1(class="text-3xl font-bold text-gray-900") Mi Perfil

        // Card de edición
        div(class="bg-white rounded-xl shadow-md p-6 space-y-6")

            if mensaje
                div(class="p-3 bg-green-100 border border-green-300 text-green-700 rounded-lg")
                    p(class="text-sm font-medium")= mensaje

            if errores
                div(class="p-3 bg-red-100 border border-red-300 text-red-700 rounded-lg")
                    each error in errores
                        p(class="text-sm font-medium")= error.msg

            form(method="POST" action="/auth/editar-perfil" noValidate class="space-y-5")
                input(type="hidden" name="_csrf" value=csrfToken )

                div
                    label(class="block text-sm font-semibold text-gray-700" for="nombre") Nombre
                    input#nombre(
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 text-sm"
                        type="text" name="nombre" placeholder=usuario.nombre required
                    )

                div
                    button(type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 bg-transparent border border-orange-600 text-orange-600 text-sm font-medium rounded-full hover:bg-orange-50 transition cursor-pointer") Cambiar datos
