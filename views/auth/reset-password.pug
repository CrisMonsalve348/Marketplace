extends ../layout/index

block contenido
    // Contenedor Principal Centrado
    div(class="min-h-screen bg-white flex items-center justify-center px-4 sm:px-6 lg:px-8")
            div(class="max-w-md w-full mx-auto")
                
                h1(class="text-3xl font-bold text-orange-600 mb-2") Restablecer Contraseña
                p(class="text-gray-600 mb-8") Ingresa tu nueva contraseña

                if errores
                    div(class="mb-6 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg")
                        each error in errores
                            p(class="text-sm font-medium")= error.msg

                if mensaje
                    div(class="mb-6 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg")
                        p(class="text-sm font-medium")= mensaje

                form(method="POST" action=`/auth/reset-password/${token}` noValidate class="space-y-6")
                    input(type="hidden" name="_csrf" value=csrfToken)

                    // Nueva contraseña
                    div
                        label(class="block text-sm font-medium text-gray-700 mb-2" for="password") Nueva contraseña
                        input#password(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition" 
                            type="password" 
                            name="password" 
                            placeholder="Mínimo 6 caracteres" 
                            required
                        )

                    // Confirmar contraseña
                    div
                        label(class="block text-sm font-medium text-gray-700 mb-2" for="passwordConfirm") Confirmar contraseña
                        input#passwordConfirm(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition" 
                            type="password" 
                            name="repeat_password" 
                            placeholder="Repite tu contraseña" 
                            required
                        )

                    // Botón
                    button(
                        type="submit" 
                        class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 rounded-lg transition duration-200"
                    ) Cambiar contraseña

                // Enlaces auxiliares
                div(class="text-center text-sm mt-6")
                    p(class="text-gray-600")
                        a(class="text-orange-600 hover:text-orange-700 font-medium" href="/auth/login") Volver al inicio de sesión