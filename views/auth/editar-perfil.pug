extends ../layout/app.pug

block content
    div(class="mx-auto max-w-md px-4 mt-6")
        div(class="bg-white py-8 px-4 shadow rounded-lg")

            if mensaje
                div.mb-6.p-3.bg-green-100.border.border-green-400.text-green-700.rounded
                    p.text-sm.font-medium= mensaje

            if errores
                div.mb-6.p-3.bg-red-100.border.border-red-400.text-red-700.rounded
                    each error in errores
                        p.text-sm.font-medium= error.msg

            form(method="POST" action="/auth/editar-perfil" noValidate)
                input(type="hidden" name="_csrf" value=csrfToken )

                div.mb-5
                    label.block.text-sm.font-medium.text-gray-700(for="nombre") Nombre
                    .mt-1
                        input#nombre(class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" type="text" name="nombre" placeholder=usuario.nombre required)

                div
                    button(type="submit" class="w-full flex justify-center py-2 px-4 border border-orange-600 rounded-full text-sm font-medium text-orange-600 bg-transparent hover:bg-orange-50 transition cursor-pointer") Cambiar datos